<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app metadata-complete="true"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Test Services WAR</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>

  <!--<context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:task-log4j.properties</param-value>
  </context-param>-->

  <!--<context-param>-->
    <!--<param-name>log4jExposeWebAppRoot</param-name>-->
    <!--<param-value>false</param-value>-->
  <!--</context-param>-->

  <!--<listener>-->
    <!--<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>-->
  <!--</listener>-->

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>


  <!-- Jersey Servlet -->
  <servlet>
    <servlet-name>test-service-v1</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>
        org.aws.test.helloworld
      </param-value>
    </init-param>

    <!-- This displays the trace in the HEADERS in the browser -->
    <init-param>
      <param-name>jersey.config.server.tracing.type</param-name>
      <param-value>OFF</param-value>
    </init-param>
    <init-param>
      <param-name>jersey.config.server.provider.classnames</param-name>
      <param-value>
        org.aws.test.helloworld.HttpTestResource;
      </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- Add the V4 Projection Servlets for Batch,REST and Graphql -->

  <servlet-mapping>
    <servlet-name>test-service-v1</servlet-name>
    <url-pattern>/v1/*</url-pattern>
  </servlet-mapping>

</web-app>